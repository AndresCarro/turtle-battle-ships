    security_group_ids = []
  },
  {
    function_name   = "turtle-battleships-list-friends"
    dockerfile_path = "../lambdas/list-friends-lambda"
    memory_size     = 512
    timeout         = 30
    environment_variables = {
      ENVIRONMENT = "production"
    }
    # Enable VPC to access RDS Proxy
    vpc_enabled        = true
    subnet_names       = ["private-logic-1", "private-logic-2"]
    security_group_ids = []
