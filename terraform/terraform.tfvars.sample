# SQS queue for events (S3 notifications will post here)
events_queue_name = "turtle-battleships-events-sample"

# Video replays bucket configuration
video_replays_bucket = {
  name               = "turtle-battleships-video-replays-sample"
  versioning_enabled = false
  encryption_enabled = true
  sse_algorithm      = "AES256"
}

# Video renderer lambda configuration
video_renderer_lambda = {
  function_name         = "turtle-battleships-video-renderer"
  dockerfile_path       = "../lambdas/video-renderer-lambda"
  memory_size           = 1024
  timeout               = 900
  environment_variables = {
    INPUT_BUCKET = "turtle-battleships-text-replays-sample"
    OUTPUT_BUCKET = "turtle-battleships-video-replays-sample"
  }
}

# Cognito configuration (example)
# Set `enabled = true` to create a Cognito User Pool, App Client and Hosted UI.
cognito_config = {
  enabled       = true
  callback_url = "https://google.com"
}
