    }
    # Enable VPC to access RDS Proxy
    vpc_enabled        = true
    subnet_names       = ["private-logic-1", "private-logic-2"]
    security_group_ids = []
  },
  {
    function_name   = "turtle-battleships-list-game-rooms"
    dockerfile_path = "../lambdas/list-game-rooms-lambda"
    memory_size     = 512
